{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@3d/character-state": ["libs/character-state/src/index.ts"],
      "@3d/dynamic-scene": ["libs/dynamic-scene/src/index.ts"],
      "@3d/physic-material": ["libs/physic-material/src/index.ts"],
      "@3d/text-sprite": ["libs/text-sprite/src/index.ts"],
      "@3d/third-person-controls": ["libs/third-person-controls/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
